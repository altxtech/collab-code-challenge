<div id="playlists">
  <%= form_with url: playlist_items_path, method: :post, local: true do %>
    <input type="hidden" name="video_id" value="<%= @video_id %>">
    <% @playlists.each do |playlist| %>
      <div class="playlist-item form-check mb-3">
        <input class="form-check-input" type="checkbox" name="playlist_ids[]" value="<%= playlist.id %>" id="playlist_<%= playlist.id %>">
        <label class="form-check-label" for="playlist_<%= playlist.id %>">
          <%= playlist.name %>
        </label>
      </div>
    <% end %>
    <div class="d-grid">
      <button type="submit" class="btn btn-success">Save to Selected Playlists</button>
    </div>
  <% end %>
</div>